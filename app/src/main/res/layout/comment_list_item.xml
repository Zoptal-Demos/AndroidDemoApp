<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_13sdp"
    android:padding="@dimen/_12sdp"
    android:background="@drawable/top_constraint_corner_22dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivUserImage"
        android:layout_width="@dimen/_28sdp"
        android:layout_height="@dimen/_28sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CircleImageViewStyle"
        android:src="@drawable/profile_img_female"
        />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/ivUserImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Sophia Willson"
        android:includeFontPadding="false"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="@+id/ivUserImage"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/_9ssp"/>
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Aug-12-2022"
        android:includeFontPadding="false"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="@+id/tvUserName"
        app:layout_constraintTop_toBottomOf="@+id/tvUserName"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/_CC000000"
        android:textSize="@dimen/_8ssp"/>

    <TextView
        android:id="@+id/tvComments"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
        android:layout_marginTop="@dimen/_5sdp"
        android:includeFontPadding="false"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@+id/ivUserImage"
        app:layout_constraintTop_toBottomOf="@+id/tvTime"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/_B3000000"
        android:textSize="@dimen/_9ssp"/>

</androidx.constraintlayout.widget.ConstraintLayout>