<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/_11sdp"
    android:paddingVertical="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_13sdp"
    android:background="@drawable/constaint_corner_15dp">

    <ImageView
        android:id="@+id/ivCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvCardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debitcard"
        android:textColor="@color/black"
        android:textSize="@dimen/_7ssp"
        android:fontFamily="@font/roboto_regular"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@+id/ivCard"
        />


    <TextView
        android:id="@+id/tvCardNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="**** **** **** 5682"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        android:gravity="start"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/_11sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivCard"
        />

        <TextView
        android:id="@+id/tvExpireDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Expires 10/25"
        android:textColor="@color/_CC000000"
        android:textSize="@dimen/_9ssp"
        android:gravity="start"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_11sdp"
            app:layout_constraintTop_toBottomOf="@+id/tvCardNumber"
        app:layout_constraintStart_toEndOf="@+id/ivCard"
        />

</androidx.constraintlayout.widget.ConstraintLayout>