<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="@dimen/_14sdp"
    android:layout_marginTop="@dimen/_13sdp"
    android:paddingHorizontal="@dimen/_9sdp"
    android:background="@drawable/corner_light_white_15dp">

    <TextView
        android:id="@+id/tvTransactionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_9ssp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/bid_amount_received"/>

    <TextView
        android:id="@+id/tvTransactionDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_8ssp"
        android:textColor="@color/_CC000000"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTransactionName"
        android:fontFamily="@font/roboto_medium"
        android:text="Jan 08, 2024"/>
    <TextView
        android:id="@+id/tvTransactionPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/_77BE51F"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_20sdp"
        app:layout_constraintStart_toEndOf="@+id/tvTransactionName"
        app:layout_constraintTop_toBottomOf="@+id/tvTransactionName"
        app:layout_constraintBottom_toTopOf="@+id/tvTransactionDate"
        android:fontFamily="@font/roboto_bold"
        android:text="$5000"/>


</androidx.constraintlayout.widget.ConstraintLayout>