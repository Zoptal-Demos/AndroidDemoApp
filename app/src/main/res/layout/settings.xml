<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="@dimen/_15sdp">

    <include
        android:id="@+id/topLayout"
        layout="@layout/top_screen_tool" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/_25sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLayout"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clProfileOpttions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_13sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/top_constraint_corner_22dp">

                <TextView
                    android:id="@+id/tvChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/change_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/next_arrow"
                    android:drawableStart="@drawable/change_password"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/roboto_regular"/>

                <View
                    android:id="@+id/viewChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_view_line"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvChangePassword"/>

                <TextView
                    android:id="@+id/tvNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:drawableEnd="@drawable/next_arrow"
                    android:drawableStart="@drawable/notifications"
                    app:layout_constraintTop_toBottomOf="@+id/viewChangePassword"
                    android:fontFamily="@font/roboto_regular"/>

                <View
                    android:id="@+id/viewNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_view_line"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvNotifications"/>


                <TextView
                    android:id="@+id/tvTermsOfUse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/terms_of_use"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:drawableEnd="@drawable/next_arrow"
                    android:drawableStart="@drawable/terms_of_use"
                    app:layout_constraintTop_toBottomOf="@+id/viewNotifications"
                    android:fontFamily="@font/roboto_regular"/>

                <View
                    android:id="@+id/viewTermsOfUse"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_view_line"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvTermsOfUse"/>
                <TextView
                    android:id="@+id/tvPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:drawableEnd="@drawable/next_arrow"
                    android:drawableStart="@drawable/privacy_policy"
                    app:layout_constraintTop_toBottomOf="@+id/viewTermsOfUse"
                    android:fontFamily="@font/roboto_regular"/>

                <View
                    android:id="@+id/viewPrivacy"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_view_line"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvPrivacy"/>
                <TextView
                    android:id="@+id/tvHelpSupport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_amp_support"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:drawableEnd="@drawable/next_arrow"
                    android:drawableStart="@drawable/help_support"
                    app:layout_constraintTop_toBottomOf="@+id/viewPrivacy"
                    android:fontFamily="@font/roboto_regular"/>

                <View
                    android:id="@+id/viewHelpSupport"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/_view_line"
                    android:layout_marginTop="@dimen/_16sdp"
                    app:layout_constraintTop_toBottomOf="@+id/tvHelpSupport"/>
                <TextView
                    android:id="@+id/tvABoutMunzul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_munzul"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:drawableEnd="@drawable/next_arrow"
                    android:drawableStart="@drawable/about_munzul"
                    app:layout_constraintTop_toBottomOf="@+id/viewHelpSupport"
                    android:fontFamily="@font/roboto_regular"/>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_13sdp"
                android:elevation="1dp"
                android:layout_marginTop="@dimen/_13sdp"
                app:layout_constraintTop_toBottomOf="@+id/clProfileOpttions"
                android:background="@drawable/top_constraint_corner_22dp">

                <TextView
                    android:id="@+id/tvBackGround"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:drawablePadding="@dimen/_8sdp"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:drawableEnd="@drawable/next_arrow"
                    android:drawableStart="@drawable/logout"
                    android:fontFamily="@font/roboto_medium"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>