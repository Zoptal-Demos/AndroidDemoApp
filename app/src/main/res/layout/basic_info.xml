<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/_15sdp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBack"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/back_arrow"/>

    <TextView
        android:id="@+id/tvTopHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/basic_information"
        app:layout_constraintStart_toEndOf="@+id/ivBack"
        app:layout_constraintTop_toTopOf="@+id/ivBack"
        android:layout_marginTop="@dimen/_10sdp"
        android:theme="@style/top_heading_text"/>

    <ImageView
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/edit"/>

    <TextView
        android:id="@+id/tvNameHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Name"
        android:layout_marginTop="@dimen/_22sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvTopHeading"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/top_heading_text_14dp"/>
    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jane Doe"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@+id/tvNameHeading"
        android:layout_marginTop="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/textview_12sp"/>


    <TextView
        android:id="@+id/tvEmailHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvName"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/top_heading_text_14dp"/>
    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="janedoe@email.com"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailHeading"
        android:layout_marginTop="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/textview_12sp"/>



    <TextView
        android:id="@+id/tvPhoneNumberHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/top_heading_text_14dp"/>
    <TextView
        android:id="@+id/tvPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+1 (234) 567 8920"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumberHeading"
        android:layout_marginTop="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/textview_12sp"/>

    <TextView
        android:id="@+id/tvPreferredMoveDateHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Preferred move-in date"
        android:layout_marginTop="@dimen/_18sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvPhoneNumber"
        android:gravity="start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/top_heading_text_14dp"/>
    <TextView
        android:id="@+id/tvPreferredMoveDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Feb 23, 2024"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@+id/tvPreferredMoveDateHeading"
        android:layout_marginTop="@dimen/_9sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:theme="@style/textview_12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>